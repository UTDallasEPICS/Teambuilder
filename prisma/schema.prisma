generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("PRISMA_DB_URL")
}

model User {
  id    String @id @default(uuid())
  email String @unique

  @@map("users")
}

model Partner {
  id            String    @id @default(uuid())
  name          String
  contact_name  String    @default("")
  contact_email String    @default("")
  Projects      Project[]
  Teams         Team[]

  @@map("partners")
}

model Project {
  id        String  @id @default(uuid())
  name      String
  description  String
  targetCS  Int     @default(0) @map("target_cs")
  created_date DateTime @default(now())
  partnerId String  @map("partner_id")
  Partner   Partner @relation(fields: [partnerId], references: [id])
  Teams     Team[]
  @@map("projects")
}

model Team {
  id        String          @id @default(uuid())
  name      String
  projectId String          @map("project_id")
  Project   Project         @relation(fields: [projectId], references: [id])
  Students  TeamToStudent[]
  partnerId String          @map("partner_id")
  Partner   Partner         @relation(fields: [partnerId], references: [id])
  @@map("teams")
}

model TeamToStudent {
  id        String  @id @default(uuid())
  teamId    String  @map("team_id")
  studentId String  @map("student_id")
  Student   Student @relation(fields: [studentId], references: [id])
  Team      Team    @relation(fields: [teamId], references: [id])

  @@map("team_to_students")
}

model Student {
  gitUserName   String          @unique
  discordUser   String          @unique
  id         String @id @default(uuid())
  firstName  String @map("first_name")
  lastName   String @map("last_name")
  major      String
  seniority  String @default("") @map("seniority")
  class      String
  email      String @unique
  enrollment String
  netID      String
  TeamToStudent TeamToStudent[]

  @@map("students")
}
