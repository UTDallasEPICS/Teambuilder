// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("PRISMA_DB_URL")
}

model User {
  id    String @id @default(uuid()) //@id makes it the primary key. cuid makes random id. uuid is unversial unique id
  email String @unique

  @@map("users")
}

model Partner {
  id           String @id @default(uuid())
  name          String
  contact_name  String    @default("")
  contact_email String    @default("")
  Projects      Project[]
  Teams         Team[]    

  @@map("partners")
}

model Project {
  id           String @id @default(uuid())
  description  String
  name         String
  targetCS     Int    @map("target_cs") @default(0)
  Teams        Team[]
  partnerId    String         @map("partner_id")
  created_date DateTime @default(now())
  Partner  Partner @relation(fields: [partnerId], references: [id]) 

  @@map("projects")
}

model Team {
  id            String         @id @default(uuid())
  name          String
  projectId     String         @map("project_id")
  Project       Project        @relation(fields: [projectId], references: [id]) 
  Students      TeamToStudent[]
  partnerId     String         @map("partner_id")
  Partner       Partner @relation(fields: [partnerId], references: [id]) 
  thursdayTeam  Boolean

  @@map("teams")
}

model TeamToStudent {
  id        String @id @default(uuid()) // learn about at map and at/at map. for different names of models 
  teamId    String @map("team_id")
  studentId String @map("student_id")

  Team    Team    @relation(fields: [teamId], references: [id])
  Student Student @relation(fields: [studentId], references: [id])

  @@map("team_to_students")
}

model Student {
  id              String   @id @default(uuid())
  firstName       String   @map("first_name")
  lastName        String   @map("last_name")
  major           String
  seniority       String   @default("") @map("years_of_experience")
  class           String 
  email           String   @unique
  gitUserName     String   @unique

  discordUserName String   @unique
  gitHub          Boolean
  discord         Boolean

  TeamToStudent TeamToStudent[]

  @@map("students")
}
